{
	"manifest_version": 1,
	"type": "WebApp",

	"meta": {
		"name": "Daily Dolly",
		"description": "Keep track of your Guild Wars 2 daily things.",

		"version": "1.0.3",
		"author": "meh.",

		"icon": "img/icon.png",
		"gray_icon": "img/icon.gray.png",

		"minimum-overwolf-version": "0.77.10"
	},

	"data": {
		"start_window": "MainWindow",

		"windows": {
			"MainWindow": {
				"file": "index.html",
				"transparent": true,

				"size": {
					"width":  1,
					"height": 700
				}
			},
		},

		"externally_connectable": {
			"matches": [
				"http://*.guildwars2.com",
				"https://*.guildwars2.com"
			]
		},

		"plugins": [
			"npClipboard.dll"
		]
	}
}
